<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="fileDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="jdbcUrl" value="jdbc:mysql://ahuazhu.com:3306/WebTest?characterEncoding=UTF-8"/>
        <property name="user" value="WebTest"/>
        <property name="password" value="WebTest@0901"/>
        <property name="driverClass"
                  value="com.mysql.cj.jdbc.Driver"/>
        <property name="minPoolSize" value="8"/>
        <property name="maxPoolSize" value="30"/>
        <property name="preferredTestQuery" value="SELECT 1"/>
    </bean>

    <bean id="fileSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="fileDataSource"/>
        <property name="configLocation" value="classpath:/config/file-store-mybatis-config.xml" />

    </bean>

    <!-- Config Dao below... -->
</beans>


