<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <import resource="appContext-mybatis.xml"/>

    <!-- Config Dao below... -->

    <bean id="urlsDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.zhiwen.crawler.url.store.dao.UrlsDao"/>
        <property name="sqlSessionFactory" ref="urlsSqlSessionFactory"/>
    </bean>

    <bean id="DynamicUrlsDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.zhiwen.crawler.url.store.dao.DynamicUrlsDao"/>
        <property name="sqlSessionFactory" ref="urlsSqlSessionFactory"/>
    </bean>

    <bean id="crawlerIndexDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.zhiwen.crawler.url.store.dao.CrawlerIndexDao"/>
        <property name="sqlSessionFactory" ref="urlsSqlSessionFactory"/>
    </bean>

</beans>


