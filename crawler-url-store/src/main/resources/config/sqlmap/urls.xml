<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhiwen.crawler.url.store.dao.UrlsDao">
    <sql id="keys">
        Id,
        Url,
        ParentUrl
    </sql>

    <insert id="addUrls" parameterType="com.zhiwen.crawler.url.store.model.Urls">
        INSERT INTO Urls
        (Url,
        ParentUrl)
        VALUES
        (#{url},
         #{parentUrl}
        )
    </insert>

    <insert id="addUrlss">
        INSERT INTO Urls
        (Url,
        ParentUrl)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.url}, #{item.parentUrl})
        </foreach>
    </insert>

    <select id="getUrlsById" parameterType="int" resultType="com.zhiwen.crawler.url.store.model.Urls">
        SELECT
        <include refid="keys"/>
        FROM Urls
        WHERE Id = #{id}
    </select>

    <select id="getUrlsByParentUrl" parameterType="String" resultType="com.zhiwen.crawler.url.store.model.Urls">
        SELECT
        <include refid="keys"/>
        FROM Urls
        WHERE ParentUrl = #{parentUrl}
    </select>

    <select id="getUrlsByUrl" parameterType="String" resultType="com.zhiwen.crawler.url.store.model.Urls">
        SELECT
        <include refid="keys"/>
        FROM Urls
        WHERE Url = #{url}
    </select>

</mapper>
