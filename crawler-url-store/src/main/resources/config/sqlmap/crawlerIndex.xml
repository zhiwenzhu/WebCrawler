<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhiwen.crawler.url.store.dao.CrawlerIndexDao">
    <update id="updateIndex" parameterType="int">
        UPDATE CrawlerIndex
        SET UrlId = #{urlId}
        WHERE Id = 1
    </update>

    <select id="getCrawlerIndex" resultType="int">
        SELECT UrlId FROM
        CrawlerIndex
        WHERE Id = 1
    </select>
</mapper>